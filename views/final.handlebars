<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.0.1/TweenMax.min.js"></script>
 
<script>
    var myWheel = new Winwheel({
        'numSegments'    : 8,
        'outerRadius'    : 170,
        'segments'       :
        [
           {'fillStyle' : '#eae56f', 'text' : 'Activity 1'},
           {'fillStyle' : '#89f26e', 'text' : 'Activity 2'},
           {'fillStyle' : '#7de6ef', 'text' : 'Activity 3'},
           {'fillStyle' : '#e7706f', 'text' : 'Activity 4'},
           {'fillStyle' : '#eae56f', 'text' : 'Activity 5'},
           {'fillStyle' : '#89f26e', 'text' : 'Activity 6'},
           {'fillStyle' : '#7de6ef', 'text' : 'Activity 7'},
           {'fillStyle' : '#e7706f', 'text' : 'Activity 8'}
        ],
        'animation' :
        {
            'type'     : 'spinToStop',
            'duration' : 10,
            'spins'    : 8,
 
            // Remember to do something after the animation has finished specify callback function.
            'callbackFinished' : 'alertActivity()',
 
            // During the animation need to call the drawTriangle() to re-draw the pointer each frame.
            'callbackAfter' : 'drawTriangle()'
        }
    });
 
    // This function called after the spin animation has stopped.
    function alertActivity()
    {
        // Call getIndicatedSegment() function to return pointer to the segment pointed to on wheel.
        var activitySegment = myWheel.getIndicatedSegment();
 
        // Basic alert of the segment text which is the prize name.
        alert("The Activity you should go on is " + activitySegment.text + "!");
    }
 
    // Function to draw pointer using code (like in a previous tutorial).
    drawTriangle();
 
    function drawTriangle()
    {
        // Get the canvas context the wheel uses.
        var ctx = myWheel.ctx;
 
        ctx.strokeStyle = 'navy';     // Set line colour.
        ctx.fillStyle   = 'black';     // Set fill colour.
        ctx.lineWidth   = 2;
        ctx.beginPath();              // Begin path.
        ctx.moveTo(400, 50);           // Move to initial position.
        ctx.lineTo(310, 10);           // Draw lines to make the shape.
        ctx.lineTo(490, 10);
        ctx.lineTo(400, 50);
        ctx.stroke();                 // Complete the path by stroking (draw lines).
        ctx.fill();                   // Then fill.
    }
 
</script>

<button onClick="myWheel.startAnimation();">Spin the Wheel</button>
    </body>
</html>